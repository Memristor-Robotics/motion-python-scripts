#!/usr/bin/python3
import os,sys
sys.path.append(os.path.join(os.path.dirname(os.path.realpath(__file__)), os.pardir, 'python'))
from Engine import *
e=Engine()

e.send(b'i')
# xx yy o rr
radius = 0
orient = 1
if len(sys.argv) >= 4:
	radius = int(sys.argv[3])
if len(sys.argv) >= 5:
	orient = to_uchar(int(sys.argv[4]))
if len(sys.argv) >= 3:
	e.send(b'N' + pack(int(sys.argv[1])) + pack(int(sys.argv[2])) + uchr(orient) + pack(radius))
