#!/usr/bin/python
import sys
sys.path.append('/home/pi/python')
from send import *
from convert import *
send('i')
# xx yy o rr
radius = 0
orient = 1
if len(sys.argv) >= 4:
    radius = int(sys.argv[3])
if len(sys.argv) >= 5:
    orient = to_uchar(int(sys.argv[4]))
if len(sys.argv) >= 3:
    send("N" + pack(int(sys.argv[1])) + pack(int(sys.argv[2])) + chr(orient) + pack(radius))
