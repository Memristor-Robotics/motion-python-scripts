#!/usr/bin/python3
import os,sys
sys.dont_write_bytecode = True
sys.path.append(os.path.join(os.path.dirname(os.path.realpath(__file__)), os.pardir, 'python'))
from Engine import *
e=Engine()
e.intr()

h = '''
Differential Drive
d x y a
	x - x coord
	y - y coord
	a - goal angle
'''

#####
# 	for parameters of differential drive
# 	there are configuration parameters
# 	conf kp
# 	conf ka
# 	conf kb
#####

if len(sys.argv) > 3:
	e.diff_drive_cmd(*[int(sys.argv[i]) for i in range(1,4)])
else:
	print(h)
